{
  "arrowParens": "avoid",
  "printWidth": 128,
  "semi": false,
  "singleQuote": false,
  "trailingComma": "all",
  "useTabs": false,
  "svelteSortOrder": "options-scripts-markup-styles",
  "svelteAllowShorthand": true,
  "svelteIndentScriptAndStyle": true,
  "pluginSearchDirs": ["."],
  "plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss", "prettier-plugin-organize-imports"],
  "overrides": [{ "files": "*.svelte", "options": { "parser": "svelte" } }]
}
